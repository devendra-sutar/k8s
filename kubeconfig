# Set up KUBECONFIG
setup_kubeconfig() {
    if [ -z "$KUBECONFIG" ]; then
        log "KUBECONFIG is not set. Trying default path..."
        export KUBECONFIG=$HOME/.kube/config
    fi
    
    if [ ! -f "$KUBECONFIG" ]; then
        log "KUBECONFIG file not found at $KUBECONFIG. Ensure you have a valid kubeconfig file."
        exit 1
    else
        log "Using KUBECONFIG file at $KUBECONFIG"
    fi
}
