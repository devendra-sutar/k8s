kubectl create secret generic prometheus-k8s-monitoring \
--from-literal=username='admin' \
--from-literal=password='admin' \
--from-literal=host='http://10.0.34.144:9090' \
-n alloy --dry-run=client -o yaml | kubectl apply -f -



kubectl expose deployment grafana-k8s-monitoring-alloy \
  --type=NodePort \
  --name=grafana-nodeport-service \
  --port=3000 --target-port=12345 -n alloy
